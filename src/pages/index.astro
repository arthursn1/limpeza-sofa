---
import PageRenderer from "../components/PageRenderer.astro";
import type { PageBlock } from "../types/schema";
import '../styles/global.css'

// IMPORTAR FONTES LOCALMENTE (Melhora muito a performance)
import '@fontsource/plus-jakarta-sans/400.css';
import '@fontsource/plus-jakarta-sans/500.css';
import '@fontsource/plus-jakarta-sans/600.css';
import '@fontsource/plus-jakarta-sans/700.css';
import '@fontsource/plus-jakarta-sans/800.css';
import '@fontsource/space-grotesk/500.css';
import '@fontsource/space-grotesk/600.css';
import '@fontsource/space-grotesk/700.css';

// --- IMPORTAÇÃO DE IMAGENS (Assets) ---
// O Astro otimizará estas imagens automaticamente
import logoImage from "../assets/logo.png";

// Hero Images
import heroSofaSujo from "../assets/sofa-sujo.png";
import heroSofaLimpo from "../assets/sofa-limpo.png";

// Galeria Antes/Depois Images
// Certifique-se que esses arquivos existem na pasta src/assets
import sofa3LugaresAntes from "../assets/sofa-3-lugares-antes.png";
import sofa3LugaresDepois from "../assets/sofa-3-lugares-depois.png";
import sofaCouroAntes from "../assets/sofa-couro-antes.png";
import sofaCouroDepois from "../assets/sofa-couro-depois.png";
import poltronaAntes from "../assets/poltrona-antes.png";
import poltronaDepois from "../assets/poltrona-depois.png";

const dadosDaPagina: PageBlock[] = [
  // 1. O Menu no topo
  {
    type: "Navbar",
    props: {
      logoUrl: logoImage, // Passando a imagem importada
      logoText: "SofáLimpo", 
      links: [
        { label: "Serviços", href: "#servicos" },
        { label: "Resultados", href: "#resultados" },
        { label: "Depoimentos", href: "#depoimentos" },
        { label: "Contato", href: "#contato" }
      ],
      ctaText: "Orçamento Grátis",
      ctaLink: "https://wa.me/5511999999999" 
    }
  },

  {
    type: "Hero",
    props: {
      badge: "Atendimento em São Paulo e região",
      title: "Seu sofá como <span class='text-gradient'>novo em poucas horas</span>",
      description: "Higienização profissional de sofás, cadeiras, colchões e estofados. Técnicas avançadas para eliminar sujeiras, manchas e maus odores.",
      features: [
        "Eliminação de ácaros e bactérias",
        "Remoção de manchas difíceis",
        "Secagem rápida em 3-4 horas"
      ],
      primaryCta: { text: "Agendar pelo WhatsApp", href: "#" },
      secondaryCta: {
        text: "(11) 99999-9999",
        href: "tel:11999999999"
      },
      
      // Passando as variáveis importadas do Hero
      imageDirtyUrl: heroSofaSujo,
      imageCleanUrl: heroSofaLimpo,
      
      stats: "+500 clientes"
    }
  },

  {
    type: "Services",
    props: {
      eyebrow: "NOSSOS SERVIÇOS",
      title: "Soluções completas em higienização",
      description: "Oferecemos serviços especializados para todos os tipos de estofados, sempre com produtos de alta qualidade e técnicos capacitados.",
      items: [
        {
          icon: "sofa",
          title: "Sofás",
          description: "Limpeza profunda de todos os tipos de sofás: tecido, couro, suede e mais."
        },
        {
          icon: "chair",
          title: "Cadeiras e Poltronas",
          description: "Higienização completa para cadeiras de escritório, poltronas e afins."
        },
        {
          icon: "bed",
          title: "Colchões",
          description: "Eliminação de ácaros, manchas e odores para noites de sono mais saudáveis."
        },
        {
          icon: "rug",
          title: "Tapetes e Carpetes",
          description: "Limpeza profissional que remove sujeira profunda e revitaliza as fibras."
        },
        {
          icon: "car",
          title: "Bancos de Carro",
          description: "Estofamento automotivo limpo e higienizado, eliminando odores e manchas."
        },
        {
          icon: "shield",
          title: "Impermeabilização",
          description: "Proteção extra contra líquidos e manchas para seus estofados."
        }
      ]
    }
  },

  {
    type: "BeforeAfter",
    props: {
      eyebrow: "RESULTADOS REAIS",
      title: "Veja as transformações",
      description: "Confira alguns dos nossos trabalhos realizados. Resultados visíveis que fazem a diferença na sua casa.",
      items: [
        {
          title: "Sofá 3 lugares",
          description: "Remoção de manchas de café e sujeira acumulada",
          // Usando as variáveis importadas
          beforeImage: sofa3LugaresAntes,
          afterImage: sofa3LugaresDepois
        },
        {
          title: "Sofá de couro",
          description: "Hidratação e limpeza profunda do couro",
          beforeImage: sofaCouroAntes,
          afterImage: sofaCouroDepois
        },
        {
          title: "Poltrona",
          description: "Eliminação de odores e revitalização do tecido",
          beforeImage: poltronaAntes,
          afterImage: poltronaDepois
        }
      ],
      bottomCta: "Quer ver seu sofá assim?"
    }
  },

  {
    type: "Testimonials",
    props: {
      eyebrow: "DEPOIMENTOS",
      title: "O que nossos clientes dizem",
      description: "A satisfação dos nossos clientes é nossa maior conquista. Veja o que eles têm a dizer sobre nosso trabalho.",
      items: [
        {
          name: "Maria Silva",
          location: "São Paulo - SP",
          text: "Meu sofá estava com manchas há anos e eu já tinha desistido. O trabalho ficou impecável! Super recomendo.",
          avatar: "https://randomuser.me/api/portraits/women/44.jpg" // Links externos continuam funcionando
        },
        {
          name: "João Santos",
          location: "Guarulhos - SP",
