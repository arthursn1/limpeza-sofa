        {
          name: "Carlos Oliveira",
          location: "Osasco - SP",
          text: "Excelente atendimento do início ao fim. A equipe foi super cuidadosa com meus móveis.",
          avatar: "https://randomuser.me/api/portraits/men/85.jpg"
        }
      ]
    }
  },

  {
    type: "ContactForm",
    props: {
      eyebrow: "CONTATO",
      title: "Solicite seu orçamento",
      description: "Preencha o formulário abaixo ou entre em contato diretamente pelo WhatsApp para um orçamento rápido e sem compromisso.",
      info: {
        phone: "(11) 99999-9999",
        address: "São Paulo e região metropolitana",
        hours: "Seg a Sáb, 8h às 18h"
      },
      mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.197577884328!2d-46.65205562375836!3d-23.56134856158913!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59c8da0aa315%3A0xd59f9431f2c9776a!2sAv.%20Paulista%2C%20S%C3%A3o%20Paulo%20-%20SP!5e0!3m2!1spt-BR!2sbr!4v1709123456789!5m2!1spt-BR!2sbr",
      formLabels: {
        name: "Nome completo",
        phone: "WhatsApp / Telefone",
        message: "Mensagem",
        button: "Enviar mensagem"
      }
    }
  },

  {
    type: "Footer",
    props: {
      logoUrl: logoImage, // Usando a mesma imagem do topo
      logoAlt: "SofáLimpo",
      description: "Especialistas em higienização de estofados. Transformando seu lar com limpeza profissional há mais de 5 anos.",
      links: [
        { label: "Serviços", href: "#servicos" },
        { label: "Resultados", href: "#resultados" },
        { label: "Depoimentos", href: "#depoimentos" },
        { label: "Contato", href: "#contato" }
      ],
      socials: {
        instagram: "https://instagram.com",
        facebook: "https://facebook.com",
        whatsapp: "https://wa.me/5511999999999"
      },
      copyright: "© 2025 SofáLimpo. Todos os direitos reservados."
    }
  }
];
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Limpeza de Sofá</title>
  </head>
  <body>
    <PageRenderer blocks={dadosDaPagina} />
