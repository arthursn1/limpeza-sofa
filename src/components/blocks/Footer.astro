---
import type { z } from "astro/zod";
import { FooterSchema } from "../../types/schema";
// 1. Importa o componente Image
import { Image } from "astro:assets";

type Props = z.infer<typeof FooterSchema>['props'];

const { logoUrl, logoAlt, description, links, socials, copyright } = Astro.props;

// SVGs inline para os ícones sociais
const icons = {
  instagram: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>`,
  facebook: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>`,
  sparkles: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M9 3v4"/><path d="M3 9h4"/><path d="M3 5h4"/></svg>`,
  // ÍCONE DO WHATSAPP OFICIAL (Marca)
  whatsapp: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor" stroke="none"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>`
};
---

<footer class="bg-foreground text-background py-12 border-t border-border">
  <div class="container mx-auto px-4">
    
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      
      {/* Brand & Description */}
      <div class="space-y-4">
        <a href="/" class="block w-fit">
          {/* 2. Substituição: <img> por <Image /> */}
          <Image 
            src={logoUrl} 
            alt={logoAlt || "Logo"}
            width={200}
            densities={[1.5, 2]}
            class="h-10 w-auto object-contain brightness-0 invert" 
          />
        </a>
        <p class="text-background/70 text-sm max-w-xs leading-relaxed">
          {description}
        </p>
      </div>

      {/* Quick Links */}
      <div>
        <h4 class="font-semibold mb-4 text-background">Links Rápidos</h4>
        <ul class="space-y-2 text-background/70">
          {links.map((link) => (
            <li>
              <a href={link.href} class="hover:text-background transition-colors block py-1">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Social Media */}
      <div>
        <h4 class="font-semibold mb-4 text-background">Redes Sociais</h4>
        <div class="flex gap-4">
          {socials.instagram && (
            <a 
              href={socials.instagram} 
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-background/10 flex items-center justify-center hover:bg-background/20 transition-colors text-background"
              aria-label="Instagram"
            >
              <Fragment set:html={icons.instagram} />
            </a>
          )}
          {socials.facebook && (
            <a 
              href={socials.facebook} 
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-background/10 flex items-center justify-center hover:bg-background/20 transition-colors text-background"
              aria-label="Facebook"
            >
              <Fragment set:html={icons.facebook} />
            </a>
          )}
        </div>
      </div>

    </div>

    {/* Copyright */}
    <div class="border-t border-background/10 pt-8 text-center text-background/50 text-sm">
      <p>
        {copyright}
      </p>
    </div>
  </div>

  {/* Floating WhatsApp Button */}
  {socials.whatsapp && (
    <a 
      href={socials.whatsapp} 
      target="_blank"
      class="fixed bottom-6 right-6 w-14 h-14 bg-whatsapp hover:bg-whatsapp/90 text-whatsapp-foreground rounded-full shadow-2xl flex items-center justify-center z-50 hover:scale-110 transition-transform duration-300"
      title="Fale conosco no WhatsApp"
    >
      <Fragment set:html={icons.whatsapp} />
    </a>
  )}
</footer>