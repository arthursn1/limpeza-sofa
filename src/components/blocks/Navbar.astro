---
import type { z } from "astro/zod";
import { NavbarSchema } from "../../types/schema";
import { Image } from "astro:assets";

type Props = z.infer<typeof NavbarSchema>['props'];

const { logoUrl, logoText, links, ctaText, ctaLink } = Astro.props;

// SVG do WhatsApp (Icon Brand)
const whatsappIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="none" class="ml-2"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>`;
---

<header class="relative md:sticky md:top-0 z-50 w-full bg-background/80 backdrop-blur-md border-b border-border/50 transition-all duration-300">
  <div class="container mx-auto px-4 md:px-6 py-4 flex items-center justify-between">
    
    <a href="/" class="flex items-center gap-2 group z-50">
      <Image 
        src={logoUrl} 
        alt={logoText}
        width={200}
        densities={[1.5, 2]}
        class="h-10 w-auto object-contain transition-transform duration-300 group-hover:scale-105" 
      />
    </a>

    <nav class="hidden md:flex items-center gap-8">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-muted-foreground hover:text-foreground transition-colors font-medium text-sm lg:text-base"
        >
          {link.label}
        </a>
      ))}
    </nav>

    <a 
      href={ctaLink} 
      target="_blank"
      class="hidden md:flex items-center gap-2 bg-whatsapp text-whatsapp-foreground px-5 py-2.5 rounded-lg font-semibold hover:opacity-90 transition-opacity shadow-sm hover:scale-105 transform duration-200"
    >
      {ctaText}
      <Fragment set:html={whatsappIcon} />
    </a>

    <button 
      id="menu-toggle" 
      class="md:hidden p-2 text-foreground focus:outline-none z-50" 
      aria-label="Menu"
    >
      <svg id="icon-menu" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="4" x2="20" y1="12" y2="12"/>
        <line x1="4" x2="20" y1="6" y2="6"/>
        <line x1="4" x2="20" y1="18" y2="18"/>
      </svg>
      
      <svg id="icon-close" class="hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x-icon lucide-x">
        <path d="M18 6 6 18"/>
        <path d="m6 6 12 12"/>
      </svg>
    </button>
  </div>

  <div 
    id="mobile-menu" 
    class="absolute top-full left-0 w-full bg-background/95 backdrop-blur-xl border-b border-border/50 p-4 md:hidden shadow-lg transition-all duration-300 ease-in-out invisible opacity-0 -translate-y-4 pointer-events-none"
  >
    <nav class="flex flex-col space-y-4">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-foreground hover:text-primary transition-colors font-medium text-lg py-2 border-b border-border/50 last:border-0"
        >
          {link.label}
        </a>
      ))}
      
      <a 
        href={ctaLink} 
        target="_blank"
        class="flex items-center justify-center gap-2 bg-whatsapp text-whatsapp-foreground px-5 py-3 rounded-lg font-bold hover:opacity-90 transition-opacity shadow-sm w-full mt-4"
      >
        {ctaText}
        <Fragment set:html={whatsappIcon} />
      </a>
    </nav>
  </div>

</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const iconMenu = document.getElementById('icon-menu');
  const iconClose = document.getElementById('icon-close');

  function toggleMenu() {
    if (!mobileMenu || !iconMenu || !iconClose) return;

    iconMenu.classList.toggle('hidden');
    iconClose.classList.toggle('hidden');

    mobileMenu.classList.toggle('invisible');
    mobileMenu.classList.toggle('opacity-0');
    mobileMenu.classList.toggle('opacity-100');
    mobileMenu.classList.toggle('-translate-y-4');
    mobileMenu.classList.toggle('pointer-events-none');
  }

  function closeMenu() {
    if (!mobileMenu || !iconMenu || !iconClose) return;

    iconMenu.classList.remove('hidden');
    iconClose.classList.add('hidden');

    mobileMenu.classList.add('invisible', 'opacity-0', '-translate-y-4', 'pointer-events-none');
    mobileMenu.classList.remove('opacity-100');
  }

  if (menuToggle) {
    menuToggle.addEventListener('click', toggleMenu);
  }

  if (mobileMenu) {
    const links = mobileMenu.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  }
</script>

<style is:global>
  html {
    scroll-behavior: smooth;
    /* No mobile, o padding deve ser pequeno (apenas um respiro), 
      pois o header vai subir e sumir.
    */
    scroll-padding-top: 20px;
  }

  /* Apenas em telas m√©dias (md) ou maiores, aplicamos o padding grande 
    para compensar o menu fixo.
  */
  @media (min-width: 768px) {
    html {
      scroll-padding-top: 100px;
    }
  }
</style>