---
import type { z } from "astro/zod";
import { FeaturesSchema } from "../../types/schema";

type Props = z.infer<typeof FeaturesSchema>['props'];

const { title, items } = Astro.props;
---

<section class="py-20 px-6 bg-white text-slate-900">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">{title}</h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {items.map((item) => (
        <div class="p-6 border border-slate-200 rounded-xl hover:shadow-lg transition">
          <h3 class="font-bold text-xl mb-3 text-blue-600">{item.title}</h3>
          <p class="text-slate-600">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>