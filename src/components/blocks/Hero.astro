---
import type { z } from "astro/zod";
import { HeroSchema } from "../../types/schema";
import { Image } from "astro:assets";

type Props = z.infer<typeof HeroSchema>['props'];

// CORREÇÃO: Pegamos imageDirtyUrl e imageCleanUrl das props (vindo do index)
// e adicionamos valores padrão para features e arrays para evitar o erro de .map
const { 
  badge, 
  title, 
  description, 
  features = [], // Proteção contra erro de .map
  primaryCta, 
  secondaryCta, 
  imageDirtyUrl, 
  imageCleanUrl, 
  stats 
} = Astro.props;
---

<section class="relative min-h-[85vh] md:min-h-[90vh] flex items-center bg-gradient-subtle overflow-hidden">
  
  <div class="absolute top-20 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-primary/10 rounded-full blur-3xl pointer-events-none"></div>
  
  <div class="container mx-auto px-4 md:px-6 py-8 md:py-12 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
      <div class="space-y-8 order-2 lg:order-1">
        
        {badge && (
          <div class="inline-flex items-center gap-2 bg-accent px-4 py-2 rounded-full">
            <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
            <span class="text-sm font-medium text-accent-foreground">
              {badge}
            </span>
          </div>
        )}
        
        <h1 class="font-sans text-4xl md:text-5xl lg:text-6xl font-bold  text-foreground tracking-tight">
          <Fragment set:html={title} />
        </h1>
        
        <p class="text-lg text-muted-foreground max-w-lg leading-relaxed">
          {description}
        </p>
        
        <ul class="space-y-3">
          {/* A proteção features || [] impede o erro se features for undefined */}
          {(features || []).map((item) => (
            <li class="flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-primary flex-shrink-0"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
              <span class="text-foreground font-medium">{item}</span>
            </li>
          ))}
        </ul>
        
        <div class="flex flex-col sm:flex-row gap-4 pt-2">
          <a 
            href={primaryCta.href} 
            class="inline-flex items-center justify-center whitespace-nowrap rounded-xl text-base font-bold ring-offset-background transition-transform hover:scale-105 duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-12 px-8 bg-whatsapp hover:bg-whatsapp/90 text-whatsapp-foreground shadow-soft"
          >
            {primaryCta.text}
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="ml-2 w-5 h-5"> <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/> </svg>      </a>
          
          {secondaryCta && (
            <a 
              href={secondaryCta.href} 
              class="inline-flex items-center justify-center whitespace-nowrap rounded-xl text-base font-semibold ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-12 px-8"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 w-5 h-5"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              {secondaryCta.text}
            </a>
          )}
        </div>
      </div>
      
      <div class="relative mt-8 lg:mt-0 order-1 lg:order-2">
        <div class="relative rounded-3xl overflow-hidden shadow-card bg-card aspect-[4/3] group border border-white/20">
          
          {/* AQUI USAMOS AS VARIÁVEIS RECEBIDAS DO INDEX */}
          <Image 
            src={imageCleanUrl} 
            alt="Sofá limpo" 
            class="absolute inset-0 w-full h-full object-cover"
          />

          <Image 
            id="dirty-sofa-image"
            src={imageDirtyUrl} 
            alt="Sofá sujo" 
            class="absolute inset-0 w-full h-full object-cover z-10 transition-all duration-[2000ms] ease-in-out [clip-path:inset(0_0_0_0)]"
          />
          
          <div class="absolute inset-0 bg-gradient-to-t from-foreground/10 to-transparent pointer-events-none z-10"></div>
        </div>
        
        {stats && (
          <div class="absolute -bottom-6 -left-6 bg-card rounded-2xl p-4 shadow-card border border-border z-20 hidden md:block">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                <span class="text-2xl">⭐</span>
              </div>
              <div>
                <p class="font-bold text-foreground">{stats}</p>
                <p class="text-sm text-muted-foreground">satisfeitos</p>
              </div>
            </div>
          </div>
        )}
      </div>

    </div>
  </div>
</section>

<script>
  window.addEventListener('load', () => {
    const dirtyImage = document.getElementById('dirty-sofa-image');
    
    if (dirtyImage) {
      setTimeout(() => {
        dirtyImage.classList.add('[clip-path:inset(0_0_0_100%)]');
      }, 600); 
    }
  });
</script>